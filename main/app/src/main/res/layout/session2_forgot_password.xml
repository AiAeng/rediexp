<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/createAnAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Forgot Password"
        android:textColor="#141414"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/CompleteTheSignUp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/createAnAcc"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Enter your email address"
        android:textColor="#A7A7A7"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CompleteTheSignUp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/EmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Email Address"
            android:textColor="#A7A7A7"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/EmailAddress_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/signup_border_normal"
            android:ems="33"
            android:hint="**********@mail.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#141414"
            android:textColorHint="#A7A7A7"
            android:textSize="14dp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="58dp">


        <ImageButton
            android:id="@+id/SendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sendotpbefore"
            android:contentDescription="Send code verification" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SendOTP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Alreadyhave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Remember Password?"
                android:textColor="#A7A7A7"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/SignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Sign In"
                android:textColor="#0560FA"
                android:textSize="12dp" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
