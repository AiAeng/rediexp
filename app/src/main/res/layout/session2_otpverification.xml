<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/createAnAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/roboto_medium"
        android:text="OTP Verification"
        android:textColor="#141414"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/CompleteTheSignUp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/createAnAcc"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Enter the 6 digit numbers sent to your email"
        android:textColor="#A7A7A7"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="367dp"
        android:layout_height="35dp"
        android:layout_below="@id/CompleteTheSignUp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">


        <EditText
            android:id="@+id/inputNumber1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/otp_verif_edittextstyle"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#141414" />

        <EditText
            android:id="@+id/inputNumber2"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/otp_verif_edittextstyle"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#141414" />

        <EditText
            android:id="@+id/inputNumber3"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/otp_verif_edittextstyle"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#141414" />

        <EditText
            android:id="@+id/inputNumber4"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/otp_verif_edittextstyle"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#141414" />

        <EditText
            android:id="@+id/inputNumber5"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/otp_verif_edittextstyle"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#141414" />

        <EditText
            android:id="@+id/inputNumber6"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/otp_verif_edittextstyle"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#141414" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/IfYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="If you didn't recieve code, "
            android:textColor="#A7A7A7"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="resend"
            android:textColor="#0560FA"
            android:textSize="12dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="103dp">


        <ImageButton
            android:id="@+id/SetNewPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/set_new_password_gray"
            android:contentDescription="Set New Password" />


    </RelativeLayout>


</RelativeLayout>
