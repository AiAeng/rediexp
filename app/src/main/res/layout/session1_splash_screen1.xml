<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/splashscreen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splashscreen1" />

    <TextView
        android:id="@+id/quickDelivery"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Quick Delivery At Your Doorstep"
        android:textColor="#0560FA"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splashscreen1"
        android:gravity="center" />

    <TextView
        android:id="@+id/enjoyQuick"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/quickDelivery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Enjoy quick pick-up and delivery to your destination"
        android:textColor="#3A3A3A"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp">

        <ImageButton
            android:id="@+id/skip_splashscreen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/skip"
            android:layout_marginStart="32dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Skip button"
            />

        <ImageButton
            android:id="@+id/next_splashscreen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next"
            android:layout_marginEnd="32dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Next button"
            />
    </RelativeLayout>

</RelativeLayout>
